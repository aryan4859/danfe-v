number_to_check = 10


# WAP stands for write a program
dekhauln("WAP if the number", number_to_check, "is odd or even")


# % aka mod gets the remainder of x / 2

dekhau(">")
yedi number_to_check % 2 {
    dekhauln("The number", number_to_check, "is an odd number")
}natra {
    dekhauln("The number", number_to_check, "is an even number")
}
